<Page  
    x:Class="SmartLedgerPL.Views.JournalEntry"  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
    xmlns:local="using:SmartLedgerPL.Views"  
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"  
    mc:Ignorable="d">

    <Grid Padding="20">
        <!--<Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F5F7FA" Offset="0"/>
                <GradientStop Color="#E4EBF5" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>-->

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
         
        

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#4316A7" Offset="0"/>
                <GradientStop Color="SkyBlue" Offset="0.5"/>
                <GradientStop Color="#0B0B3B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock Grid.Row="1" Text="📝 إدخال القيد اليومي" FontSize="28" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- بطاقة البيانات -->
        <Border Grid.Row="2" Background="#66FFFFFF" CornerRadius="16" Padding="20" Margin="0,0,0,20" BorderBrush="#E0E0E0" BorderThickness="1">

            <StackPanel Spacing="20">

                <!-- الحقول -->
                <StackPanel x:Name="InputStack" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text=" اليومية:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="DarkSlateGray"/>
                        <TextBox Text="{Binding Name,Mode=TwoWay}" Width="180" Height="45" Padding="12" Background="#FFF" Foreground="Black" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="12"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text=" البيان:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="DarkSlateGray"/>
                        <TextBox Text="{Binding Description,Mode=TwoWay}" Width="180" Height="45" Padding="12" Background="#FFF" Foreground="Black" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="12"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text=" دائن:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="DarkSlateGray"/>
                        <TextBox Text="{Binding CreditAmount,Mode=TwoWay}" Width="140" Height="45" Padding="12" Background="#FFF" Foreground="Black" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="12" IsEnabled="{Binding IsCreditEnabled}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text=" مدين:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="DarkSlateGray"/>
                        <TextBox Text="{Binding DebitAmount,Mode=TwoWay}" Width="140" Height="45" Padding="12" Background="#FFF" Foreground="Black" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="12" IsEnabled="{Binding IsDebitEnabled}"/>
                    </StackPanel>
                </StackPanel>

                <!-- الكومبوبوكس -->
                <StackPanel x:Name="ComboStack" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text=" الحساب:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="DarkSlateGray"/>
                        <ComboBox ItemsSource="{Binding AllAccounts}" SelectedItem="{Binding SelectedAccount,Mode=TwoWay}" DisplayMemberPath="AccountName" 
                           Width="220" Height="45" Padding="12" Background="#FFF" Foreground="Black" BorderBrush="#D0D0D0" CornerRadius="12"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text=" الفئة:" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="DarkSlateGray"/>
                        <ComboBox ItemsSource="{Binding AllCategories}" SelectedItem="{Binding SelectedCategory,Mode=TwoWay}" DisplayMemberPath="CategoryName" 
                           Width="220" Height="45" Padding="12" Background="#FFF" Foreground="Black" BorderBrush="#D0D0D0" CornerRadius="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- زر الإضافة -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15">
                    <Button Content="➕ إضافة" Command="{Binding AddEntryCommand}" Width="150" Height="45" 
                     Background="DeepSkyBlue" Foreground="Black" FontWeight="SemiBold" CornerRadius="12" BorderThickness="0"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- جدول القيد -->
        <Border Grid.Row="3" Background="White" CornerRadius="10" Padding="10" Margin="0,10,0,10" BorderBrush="#E0E0E0" BorderThickness="1">
            <controls:DataGrid ItemsSource="{Binding JournalEntries}"  
                AutoGenerateColumns="False"  
                HeadersVisibility="Column"  
                RowHeight="45"  
                Background="White"  FontSize="14"  
                
                AlternatingRowBackground="LightGray">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn  
                        Header="🧾 السطر"  
                        Binding="{Binding LineId}"  
                        IsReadOnly="True" Width="*"/>
                    
                    <controls:DataGridTextColumn  
                        Header="🧾 الحساب"  
                        Binding="{Binding AccountName}"  
                        IsReadOnly="True" Width="*"/>

                    <controls:DataGridTextColumn  
                        Header="💸 (EGP) دائن"  
                        Binding="{Binding CreditAmount, Mode=TwoWay}"  
                        Width="*"
                        />

                    <controls:DataGridTextColumn  
                        Header="💰 (EGP) مدين"  
                        Binding="{Binding DebitAmount, Mode=TwoWay}"  
                        Width="*"/>

                    <controls:DataGridTextColumn  
                        Header="📋 البيان"  
                        Binding="{Binding Description}"  
                        IsReadOnly="True" Width="*"/>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Border>

        <!-- زر الحفظ -->
        <Button Grid.Row="4" Content="💾 حجز الأموال" Command="{Binding SaveCommand}" IsEnabled="{Binding IsSaveEnabled}" 
         Width="160" Height="45" HorizontalAlignment="Right" Margin="0,0,0,10" 
         Background="#388E3C" Foreground="White" FontWeight="Bold" CornerRadius="12" BorderThickness="0"/>
    </Grid>
</Page>



